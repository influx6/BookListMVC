@model IEnumerable<BookLists.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h2>List of Books</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-small btn-primary"> Create Book</a>
</p>

<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-small btn-success">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-small btn-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-small btn-danger">Delete</a>
                </td>
            </tr>

        }
    </table>
</div>

