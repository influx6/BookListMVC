@model BookLists.Models.Book;

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Book</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Books" class="form-border form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-sm btn-success" />
                <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-sm btn-primary">Back to Book</a>
                <a asp-action="Index" class="btn btn-sm btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

